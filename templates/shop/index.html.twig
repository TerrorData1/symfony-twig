{% extends 'base.html.twig' %}
{% block title %}Ramen Boutique{% endblock %}
{% block body %}
                		<div class="d-flex justify-content-center">
			<div class="row row-cols-1 row-cols-md-3 g-4 mx-auto p-0">
			{% for recipe in recipes %}
					<div class="col" style="width: 270px">
						<div class="card">
							  <img src="{{ vich_uploader_asset(recipe, 'thumbnailFile') }}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title d-flex justify-content-center">{{ recipe.title }}</h5>
								<p class="card-text d-flex justify-content-center">{{ recipe.category.name | default('') }}</p>
								<h5 class="card-title text-secondary d-flex justify-content-center">{{ recipe.duration }} €</h5>								
								{# lien a href avec l'id #}
								{# <a href="{{ path('article.show', {'slug': recipe.slug, 'id': recipe.id}) }}" class="btn btn-secondary">Voir</a> #}
								<div class="d-flex justify-content-center">
								<a href="{{ path('article.show', {'slug': recipe.slug}) }}" class="btn btn-secondary m-2">Détail</a>
								<a href="{{ path('article.show', {'slug': recipe.slug}) }}" class="btn btn-warning m-2">Ajouter</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				</div>
			</div>
<div class="d-flex justify-content-end">
{% if page > 1 %}<a href="{{ path('shop', {'page': page - 1}) }}" class="btn btn-secondary m-2">precedent</a>{% endif %}
{% if page < maxPage %}<a href="{{ path('shop', {'page': page + 1}) }}" class="btn btn-secondary m-2">suivant</a>{% endif %}
</div>

{% endblock %}